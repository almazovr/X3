#include <iostream>
#include <cstdlib>
#include <ctime>
#include <string>
#include <algorithm>
#include <random>
using namespace std;


int main()
{

    setlocale(LC_ALL, "Russian");
    {
        string slovo;
        std::cout << "введите слово";
        std::cin >> slovo;

        char vibor;
        std::cout << "введите действие /n";
        std::cout << "1. слово задом на перёд /n";
        std::cout << "2. слово без гласных /n";
        std::cout << "3. слово без согласных /n";
        std::cout << "4. рандомно раскидать буквы /n";
        std::cin >> vibor;

        switch (vibor)
        {
        case 1:
            std::reverse(slovo.begin(), slovo.end());
            std::cout << "Слово в обратном порядке: " << slovo << std::endl;
            break;
        case 2:
            for (char c : slovo) 
            {
                if (c != 'ё' && c != 'у' && c != 'е' && c != 'ы' && c != 'а' &&
                    c != 'о' && c != 'э' && c != 'я' && c != 'и' && c != 'ю' && c != 'Ё' && c != 'У' && c != 'Е' && c != 'Ы' && c != 'А' &&
                    c != 'О' && c != 'Э' && c != 'Я' && c != 'И' && c != 'Ю') 
                    slovo += c;
            }
            break;
        case 3:
            for (char c : slovo)
            {
                if (c != 'й' && c != 'ц' && c != 'к' && c != 'н' && c != 'г' &&
                    c != 'ш' && c != 'щ' && c != 'з' && c != 'х' && c != 'ъ' && c != 'ф' && c != 'в' && c != 'п' && c != 'р' && c != 'л' &&
                    c != 'д' && c != 'ж' && c != 'ч' && c != 'с' && c != 'м' && c != 'т' && c != 'ь' && c != 'б' && c != 'Й' && c != 'Ц' && c != 'К' && c != 'Н' && c != 'Г' &&
                    c != 'Ш' && c != 'Щ' && c != 'З' && c != 'Х' && c != 'Ъ' && c != 'Ф' && c != 'В' && c != 'П' && c != 'Р' && c != 'Л' &&
                    c != 'Д' && c != 'Ж' && c != 'Ч' && c != 'С' && c != 'М' && c != 'Т' && c != 'Ь' && c != 'Б')
                    slovo += c;
            }
            break;
        case 4:
            std::random_device rd;
            std::mt19937 g(rd());
            std::shuffle(slovo.begin(), slovo.end(), g);
            std::cout << "Перемешанное слово: " << slovo << std::endl;
            break;
        default:
            std::cout << "Неверный выбор действия.";
            break;
        }

    }
    return 0;
}
